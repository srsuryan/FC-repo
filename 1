/* At most k path to reach final destination */

#include <stdio.h>
#include <math.h>
#include <stdlib.h>

#define ROW 3
#define COL 3

int debug = 1;
typedef enum dir_td_ {
    DOWN = 0,
    RIGHT,
    MAX_DIR,
} dir_td;

typedef enum path_td_ {
    NO_T = 0,
    SINGLE_T,
    DOUBLE_T,
    MAX_T,
} path_td;

#define MAX_DIR 2
#define MAX_PATH 3

int pd[MAX_DIR][MAX_T] = {0};

int mat[ROW][COL] = {
                       {1, 2, 3},
                       {4, 5, 6},
                       {7, 8, 9}
                    };

typedef struct storage_ {
        int pd[MAX_DIR][MAX_T];
} storage;

storage sto[ROW][COL] = {0};

void
assign_val (int *pd, int i, int j, dir_td dir)
{
    sto[i][j].pd[dir][DOWN] += pd[dir][DOWN]
    sto[i][j].pd[dir][RIGHT] += pd[dir][RIGHT]
}

void
get_path_det (int i, int j, dir_td dst_dir, int *pd)
{
    if (dst_dir == DOWN) {
        pd[DOWN][NO_T] = sto[i][j].pd[DOWN][NO_T];
        pd[DOWN][SINGLE_T] = sto[i][j].pd[DOWN][SIGNLE_T];
        pd[DOWN][DOUBLE_T] = sto[i][j].pd[DOWN][DOUBLE_T];
        if (pd[RIGHT][NO_T]) {
            pd[DOWN][SINGLE_T] = pd[RIGHT][NO_T];
        }
        if (pd[RIGHT][SINGLE_T]) {
            pd[DOWN][DOUBLE_T] = pd[RIGHT][SINGLE_T];
        }
    }
    if (dst_dir == RIGHT) {
        pd[RIGHT][NO_T] = sto[i][j].pd[RIGHT][NO_T];
        pd[RIGHT][SINGLE_T] = sto[i][j].pd[RIGHT][SINGLE_T];
        pd[RIGHT][DOUBLE_T] = sto[i][j].pd[RIGHT][DOUBLE_T];
        if (pd[DOWN][NO_T]) {
            pd[RIGHT][SINGLE_T] = pd[DOWN][NO_T];
        }
        if (pd[DOWN][SINGLE_T]) {
            pd[RIGHT][DOUBLE_T] = pd[DOWN][SINGLE_T];
        }
    }
}

int
main (int argc, char *argv[])
{
    int i, j;

    for (i = 0; i < ROW; i++) {
         sto[i][0].pd[NO_T][DOWN] = 1;
    }
    
    for (j = 0; j < COL; j++) {
         sto[0][j].pd[NO_T][RIGHT] = 1;
    }

    for (i = 1; i < ROW; i++) {
        for (j = 1; j < COL; j++) {
            memset(pd, 0 sizeof(pd));
            get_path_det(i-1,j, DOWN, pd);
            if (debug) {
                printf(" (%d, %d), DOWN (%d %d) (%d %d) (%d %d)\n", 
                        pd[NO_T][RIGHT], pd[NO_T][DOWN],
                        pd[SINGLE_T][RIGHT], pd[SINGLE_T][DOWN],
                        pd[DOUBLE_T][RIGHT], pd[DOUBLE_T][DOWN]);
                getchar();
            }
            assign_val(&pd[DOWN], i, j, DOWN);
            memset(pd, 0 sizeof(pd));
            /* Now for LEFT COMP */
            get_path_det(sto[i][j-1], RIGHT, pd);
            if (debug) {
                printf(" (%d, %d), DOWN (%d %d) (%d %d) (%d %d)\n", 
                        pd[NO_T][RIGHT], pd[NO_T][DOWN],
                        pd[SINGLE_T][RIGHT], pd[SINGLE_T][DOWN],
                        pd[DOUBLE_T][RIGHT], pd[DOUBLE_T][DOWN]);
                getchar();
            }
            assign_val(&pd[RIGHT], i, j, RIGHT);
        }
    }
}

